---
import MainLayout from "../layouts/MainLayout.astro";
import Cta from "../components/Cta.astro";
---

<MainLayout title="Deli">
  <section class="hero">
    <div>
      <h1>Omada Wine & Deli</h1>
      <p>Øster Farimagsgade 26</p>
      <p>2100 København Ø</p>
      <p>Wednesday to Sunday</p>
      <p>11:00 - 20:00</p>
    </div>
    <div>
      <img src="butik.png.webp" alt="drawing of the store" />
    </div>
    <div class="cta_knapper">
      <Cta knaptekst="Upcoming events" />
      <Cta knaptekst="Deli goods" />
      <Cta knaptekst="Testimonials" />
      <Cta knaptekst="About" />
    </div>
  </section>
</MainLayout>

<style>
  h1 {
    color: #f75443;
    margin-bottom: 1rem;
    font-size: 2rem;
  }
  .hero {
    text-align: center;
    margin-block: 2rem;
  }
  p:nth-of-type(2),
  p:nth-of-type(4) {
    margin-bottom: 2rem;
  }
  .hero img {
    margin-bottom: 3rem;
  }
  .cta_knapper {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    align-items: center;
  }
  .cta_knapper:hover {
    transform: scale(1);
  }
  @media (min-width: 700px){
    h1{
        font-size: 3rem;
    }
    .hero{
        display: grid;
        grid-template-columns: 1fr 1fr;
        margin-block: 4rem;
        align-items: center;
        max-width: 1200px;
        margin-inline: auto;
    }
    .hero img{
    max-width: 30rem;
    margin-inline: auto;
    margin-bottom: auto;
    }
    .cta_knapper{
        grid-column: span 2;
        display: flex;
        flex-direction: row;
        justify-content: center;
        gap: 3rem;
        margin-block: 3rem 2rem;
    }
  }
</style>
